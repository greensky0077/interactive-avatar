{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "react-avatar-app/dist",
        "buildCommand": "npm --prefix react-avatar-app ci && npm --prefix react-avatar-app run build"
      }
    },
    { "src": "api/index.mjs", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(persona|openai|pdf)(/.*)?", "dest": "/api/index.mjs" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "outputDirectory": "react-avatar-app/dist"
}


