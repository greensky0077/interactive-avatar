{
  "version": 2,
  "builds": [
    { "src": "react-avatar-app/vite.config.ts", "use": "@vercel/static-build", "config": { "distDir": "react-avatar-app/dist" } },
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(persona|openai|pdf)(/.*)?", "dest": "/api/index.js" },
    { "src": "/.*", "dest": "/react-avatar-app/dist/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}


